.instructions
  %p Please upload a CSV file:

  .form
    %form{ :action => "/", :method => 'POST', :enctype => "multipart/form-data" }
      %input{ :type => 'hidden', :name => 'next', :value => "redirect" }

      .field
        %label{ :for => 'map[name]' } Map Name
        %input{ :name => 'map[name]' }

      .field
        %label{ :for => 'map[file]' } CSV File
        %input{ :type => 'file', :name => 'map[file]' }

      .submit
        %input{ :type => 'submit', :value => "Create" }
